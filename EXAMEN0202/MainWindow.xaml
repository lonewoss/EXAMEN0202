<Window x:Class="EXAMEN0202.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EXAMEN0202 — Расчёт стоимости покупки"
        Height="520" Width="820"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="14"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- хедер -->
        <Border Background="#FFF4F4F4" CornerRadius="16" Padding="16">
            <StackPanel>
                <TextBlock FontSize="22" FontWeight="SemiBold" Text="Расчёт стоимости покупки"/>
                <TextBlock Margin="0,6,0,0" Foreground="#FF555555"
                           Text="Введите размер, выберите материал и нажмите «Рассчитать»."/>
            </StackPanel>
        </Border>

        <!-- основная часть -->
        <Border Grid.Row="2" Background="White" CornerRadius="16" Padding="18">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.1*"/>
                    <ColumnDefinition Width="18"/>
                    <ColumnDefinition Width="0.9*"/>
                </Grid.ColumnDefinitions>

                <!-- Слева: вставка значений -->
                <StackPanel>
                    <TextBlock FontSize="16" FontWeight="SemiBold" Text="Ввод данных"/>

                    <TextBlock Margin="0,14,0,6" Text="Ширина (м)"/>
                    <TextBox x:Name="WidthBox" Height="34" FontSize="14" MaxLength="10"
                             VerticalContentAlignment="Center"/>

                    <TextBlock Margin="0,12,0,6" Text="Высота (м)"/>
                    <TextBox x:Name="HeightBox" Height="34" FontSize="14" MaxLength="10"
                             VerticalContentAlignment="Center"/>

                    <TextBlock Margin="0,14,0,6" Text="Материал"/>
                    <ComboBox x:Name="MaterialBox" Height="34" FontSize="14" SelectedIndex="0">
                        <ComboBoxItem Content="Алюминий"/>
                        <ComboBoxItem Content="Пластик"/>
                    </ComboBox>

                    <StackPanel Orientation="Horizontal" Margin="0,18,0,0">
                        <Button x:Name="CalcButton" Width="170" Height="38"
                                Click="CalcButton_Click" FontSize="14"
                                Content="Рассчитать"/>
                        <Button x:Name="ReceiptButton" Width="230" Height="38"
                                Margin="12,0,0,0"
                                Click="ReceiptButton_Click" FontSize="14"
                                Content="Оформить квитанцию"
                                IsEnabled="False"/>
                    </StackPanel>
                </StackPanel>

                <!-- Справа: результаты -->
                <Border Grid.Column="2" Background="#FFF9FAFF" CornerRadius="16" Padding="16">
                    <StackPanel>
                        <TextBlock FontSize="16" FontWeight="SemiBold" Text="Результат"/>

                        <StackPanel Margin="0,14,0,0">
                            <TextBlock Foreground="#FF666666" Text="Размер:"/>
                            <TextBlock x:Name="SizeText" FontSize="16" FontWeight="SemiBold" Text="—"/>
                        </StackPanel>

                        <StackPanel Margin="0,12,0,0">
                            <TextBlock Foreground="#FF666666" Text="Материал:"/>
                            <TextBlock x:Name="MaterialText" FontSize="16" FontWeight="SemiBold" Text="—"/>
                        </StackPanel>

                        <StackPanel Margin="0,12,0,0">
                            <TextBlock Foreground="#FF666666" Text="Стоимость:"/>
                            <TextBlock x:Name="CostText" FontSize="20" FontWeight="SemiBold" Text="—"/>
                        </StackPanel>

                        <Border Margin="0,16,0,0" Background="#11000000" Height="1"/>

                        <TextBlock Margin="0,12,0,0" Foreground="#FF666666" TextWrapping="Wrap">
                            Кнопка «Оформить квитанцию» создаёт чеки для Алюминия и Пластика в папке Receipts.
                        </TextBlock>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>